<!doctype html>
<html lang="no">

<head>
  <meta charset="utf-8">

  <title>Bokanbefalinger brukerstyring</title>
  <meta name="author" content="Deichmanske Bibliotek">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/brukerstyring/css/style.css" type="text/css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
</head>

<body>
  <div id="container">
    <h2>Bokanbefalinger brukerstyring</h2>
    <% @sources.each do |source| %>
      <div class="kilde">
        <div class="kilde-navn"><%= source["name"] %></div>
        <div class="triangle open"></div>
        <div class="clearfix"></div>
        <div class="kilde-innhold">
          <div class="kilde-info">
            <label>URI:</label> &lt;<%= source["uri"] %>&gt;&nbsp;
            <label>Hjemmeside:</label><input class="homepage" type="text" value="<%= source['homepage'] %>">&nbsp;
            <button class="save-source">lagre</button>
          </div>

          <table class="brukere">
            <thead>
              <tr>
                <th>e-post</th>
                <th>navn</th>
                <th>aktivert?</th>
                <th>lagre</th>
                <th>slett</th>
                <th>info</th>
              </tr>
            </thead>
            <tbody>
              <% source["users"].each do |user| %>
                <tr>
                  <td class="epost"><input class="epost" type="text" value="<%= user['accountName'] %>"></td>
                  <td class="navn"><input type="text" value="<%= user['name'] %>"></td>
                  <td class="aktivert"><input type="checkbox" checked="checked"></td>
                  <td class="endre"><button>lagre</button></td>
                  <td class="slett"><button>slett</button></td>
                  <td class="info"></td>
                </tr>
              <% end %>
              <tr class="ny-bruker">
                <td class="epost"><input class="epost" type="text" value=""></td>
                <td class="navn"><input type="text" value=""></td>
                <td class="aktivert"><input type="checkbox"></td>
                <td colspan="2" class="endre"><button>opprett ny bruker</button></td>
                <td class="info"></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>

      <div class="kilde">
      <div class="kilde-navn">Opprett ny kilde</div>
      <div class="triangle open"></div>
      <div class="clearfix"></div>
      <div class="kilde-innhold">
        <p>Lag ny kilde</p>
      </div>
    </div>

  </div>
  <script>
    $(document).ready(function() {

      $('.kilde').on('click', '.triangle.close', function() {
        $(this).removeClass("close").addClass("open");
        $(this).next().next().slideUp();
      });

      $('.kilde').on('click', '.triangle.open', function() {
        $('.kilde-innhold').slideUp();
        $('.close').removeClass("close").addClass("open");
        $(this).removeClass("open").addClass("close");
        $(this).next().next().slideDown();
      });

      $('.kilde-navn').on('click', function() {
        $(this).next().click();
      });
    });
  </script>
</body>
</html>